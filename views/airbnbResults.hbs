<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>

  <h1>{{title}}</h1>

  {{#eq 1 1}}
    <p>Values are equal!</p>
  {{else}}
    <p>Values are not equal!</p>
  {{/eq}}

  {{#if airbnbs.length}}
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Price</th>
        <th>Location</th>
        <th>Host</th>
        <th>Minimum Nights</th>
      </tr>
    </thead>
    <tbody>
      {{#each airbnbs}}
      <tr>
        <td>{{name}}</td>
        <td>
          {{#if images.picture_url}}
          <img src="{{images.picture_url}}" alt="{{name}}" width="100">
          {{else}}
          <img src="/images/default-image.jpg" alt="Default Image" width="100">
          {{/if}}
        </td>
        <td>${{price}} per night</td>
        <td>{{address.street}}, {{address.suburb}}, {{address.country}}</td>
        <td>
          {{#if host.host_url}}
          <a href="{{host.host_url}}" target="_blank">{{host.host_name}}</a>
          {{else}}
          {{host.host_name}}
          {{/if}}
        </td>
        <td>{{minimum_nights}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <div class="pagination">
    <p>Page {{page}} of {{totalPages}}</p>
    <a href="/airbnbSearch?page=1&perPage={{perPage}}" class="prev" 
      {{#if (eq page 1)}}style="pointer-events: none;"{{/if}}>First</a>
    <a href="/airbnbSearch?page={{previousPage}}&perPage={{perPage}}" class="prev" 
      {{#if (eq page 1)}}style="pointer-events: none;"{{/if}}>Prev</a>
    <a href="/airbnbSearch?page={{nextPage}}&perPage={{perPage}}" class="next" 
      {{#if (eq page totalPages)}}style="pointer-events: none;"{{/if}}>Next</a>
    <a href="/airbnbSearch?page={{totalPages}}&perPage={{perPage}}" class="next" 
      {{#if (eq page totalPages)}}style="pointer-events: none;"{{/if}}>Last</a>
  </div>

  {{else}}
  <p>No AirBnB results found for your search criteria.</p>
  {{/if}}

</body>
</html>
