<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search AirBnBs</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>

<body>
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/airbnbSearch">Search AirBnBs</a>
      <a href="/add-new">Add New Listing</a>
    </nav>
  </header>

  <main>
    <h1>Search AirBnBs</h1>
    <form action="/airbnbSearch" method="GET">
      <div class="form-group">
        <label for="page">Page:</label>
        <input type="number" id="page" name="page" min="1" value="{{page}}" required>
      </div>
      <div class="form-group">
        <label for="perPage">Per Page:</label>
        <input type="number" id="perPage" name="perPage" min="1" value="{{perPage}}" required>
      </div>
      <div class="form-group">
        <label for="minimum_nights">Minimum Nights:</label>
        <input type="number" id="minimum_nights" name="minimum_nights" min="1" value="{{minimum_nights}}" required>
      </div>
      <button class="btn" type="submit">Search</button>
    </form>

    <h2>Search Results</h2>
    {{#if airbnbs.length}}
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Location</th>
          <th>Host</th>
          <th>Minimum Nights</th>
        </tr>
      </thead>
      <tbody>
        {{#each airbnbs}}
        <tr>
          <td>{{name}}</td>
          <td>${{price}}</td>
          <td>{{address.street}}, {{address.suburb}}, {{address.country}}</td>
          <td>{{host.host_name}}</td>
          <td>{{minimum_nights}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <div class="pagination">
      <p>Page {{page}} of {{totalPages}}</p>
      <!-- Pagination Links with Search Parameters -->
      <a href="/airbnbSearch?page=1&perPage={{perPage}}&minimum_nights={{minimum_nights}}" class="prev" {{#if (eq page 1)}}style="pointer-events: none;"{{/if}}>First</a>
      <a href="/airbnbSearch?page={{previousPage}}&perPage={{perPage}}&minimum_nights={{minimum_nights}}" class="prev" {{#if (eq page 1)}}style="pointer-events: none;"{{/if}}>Prev</a>
      <a href="/airbnbSearch?page={{nextPage}}&perPage={{perPage}}&minimum_nights={{minimum_nights}}" class="next" {{#if (eq page totalPages)}}style="pointer-events: none;"{{/if}}>Next</a>
      <a href="/airbnbSearch?page={{totalPages}}&perPage={{perPage}}&minimum_nights={{minimum_nights}}" class="next" {{#if (eq page totalPages)}}style="pointer-events: none;"{{/if}}>Last</a>
    </div>
    {{else}}
    <p>No AirBnBs found for your search criteria.</p>
    {{/if}}
  </main>

  <footer>
    <p>Â© 2024 AirBnB Finder</p>
  </footer>

  <!-- Handlebars Helper for Equality Check -->
  <script>
    // Register eq helper in case it's not available in your setup
    Handlebars.registerHelper('eq', function(a, b) {
      return a === b;
    });
  </script>
</body>
</html>
